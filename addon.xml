<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.nrk"
       name="NRK"
       version="2.1.2"
       provider-name="takoi">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
    <import addon="script.module.beautifulsoup"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Norwegian Broadcasting Corporation</summary>
    <summary lang="no">Norsk rikskringkasting</summary>
    <description lang="en">NRK's Web TV gives you the opportunity to watch live TV as well as recordings of many shows.</description>
    <description lang="no">NRKs Nett-TV gir deg muligheten til å se mange NRK-programmer både direkte og i opptak.</description>
  </extension>
</addon>
